{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}
<!-- //////////////////////////////////////////////////////////////////////////////////////////////////////// -->
<!-- //////////////////////////////////////////////////////////////////////////////////////////////////////// -->

<!-- ///////////////////////////////////////     MON COMPTE       /////////////////////////////////////////// -->

<!-- //////////////////////////////////////////////////////////////////////////////////////////////////////// -->
<!-- //////////////////////////////////////////////////////////////////////////////////////////////////////// -->

<div class="container">
  <div class="row">
    <div class="col text-center py-5">
      <h1 class="font-weight-light">MON COMPTE</h1>
    </div>
  </div>

  {{ form_start(form) }}


  <div class="row">
    <div class="col-md border p-4 py-5 mr-md-3 bg-light">
      <h4 class="font-weight-light">INFORMATIONS PERSONNELLES</h4>
      <hr>


          <div class="col">
            <div class="form-group">
              <label class="champs_obligatoire text-muted">Nom</label>
              <input type="text" class="form-control" name="user[name]" value="{{app.user.name}}">
            </div>
          </div>
          <div class="col">
            <div class="form-group">
              <label class="champs_obligatoire text-muted">Numéro de téléphone</label>
              <input type="text" class="form-control" name="user[phone]" value="{{app.user.phone}}">
            </div>
          </div>
          <div class="col">
            <div class="form-group">
              <label class="champs_obligatoire text-muted">Adresse</label>
              <input type="text" class="form-control" name="user[address]" value="{{app.user.address}}">
            </div>
          </div>

    </div>
    <div class="col-md border p-4 py-5 ml-md-2 bg-light">
      <h4 class="font-weight-light">INFORMATIONS DE CONNEXION</h4>
      <hr>

        <div class="form-group">
          <label for="exampleInputEmail1" class="champs_obligatoire text-muted">Email</label>
          <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="user[email]" value="{{app.user.email}}">
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1" class="champs_obligatoire text-muted">Mot de passe</label>
          <input type="password" class="form-control" id="exampleInputPassword1" name="user[password][first]">
          <small id="passwordStrength" class="form-text text-muted">Force du mot de passe : aucun mot de passe </small>
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1" class="champs_obligatoire text-muted">Confirmation du mot de passe</label>
          <input type="password" class="form-control" id="exampleInputPassword1" name="user[password][second]">
          <small id="passwordStrength" class="form-text text-muted d-none">Force du mot de passe : aucun mot de passe</small>
        </div>

    </div>
  </div>




  <div class="row py-4 my-3">
    <div class="col border p-4 py-5 bg-light">
      <button type="submit" class="btn btn-secondary btn-hover">Mettre à jour</button>
      <div class="float-right">
        <a href="{{ path('app_homepage') }}" class="text-link text-muted no-dec-href mr-4">Retour</a>
      </div>
    </div>
  </div>
<!--
{{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
{{ form_row(form.phone, {'attr': {'class': 'form-control'}}) }}
{{ form_row(form.address, {'attr': {'class': 'form-control'}}) }}
{{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
{{ form_row(form.password.first, {'attr': {'class':'form-control'}}) }}
{{ form_row(form.password.second, {'attr': {'class':'form-control'}}) }}
-->
 {{ form_end(form) }}

</div>


{% endblock %}

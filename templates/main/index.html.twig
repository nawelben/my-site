{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}


<!-- //////////////////////////////////////////////////////////////////////////////////////////////////////// -->
<!-- //////////////////////////////////////////////////////////////////////////////////////////////////////// -->

<!-- ///////////////////////////////////////      SLIDER          /////////////////////////////////////////// -->

<!-- //////////////////////////////////////////////////////////////////////////////////////////////////////// -->
<!-- //////////////////////////////////////////////////////////////////////////////////////////////////////// -->

<div class="container-fluid">
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="{{asset('img/slider-1.jpg')}}" class="d-block w-100" alt="...">
      </div>
      <div class="carousel-item">
        <img src="{{asset('img/slider-2.jpg')}}" class="d-block w-100" alt="...">
      </div>
      <div class="carousel-item">
        <img src="{{asset('img/slider-3.jpg')}}" class="d-block w-100" alt="...">
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

<!-- //////////////////////////////////////////////////////////////////////////////////////////////////////// -->
<!-- //////////////////////////////////////////////////////////////////////////////////////////////////////// -->

<!-- ///////////////////////////////////////      PRODUCTS         /////////////////////////////////////////// -->

<!-- //////////////////////////////////////////////////////////////////////////////////////////////////////// -->
<!-- //////////////////////////////////////////////////////////////////////////////////////////////////////// -->

{% import "macros/product.html.twig" as productMacro %}

<div class="container-fluid">
  <div class="row my-3">
    {% for category in categories %}
      {{ productMacro.categoryThumbnail(category) }}
    {% endfor %}
  </div>
</div>


<!-- //////////////////////////////////////////////////////////////////////////////////////////////////////// -->
<!-- //////////////////////////////////////////////////////////////////////////////////////////////////////// -->

<!-- ///////////////////////////////////////      NEWSLETTER       /////////////////////////////////////////// -->

<!-- //////////////////////////////////////////////////////////////////////////////////////////////////////// -->
<!-- //////////////////////////////////////////////////////////////////////////////////////////////////////// -->

<div class="conatiner-fluid px-4 py-5 bg-newsletter">
  <div class="row">
    <div class="col  py-2 text-center">
      <p class="display-4">NEWSLETTERS</p>
    </div>
  </div>
  <div class="row">
    <div class="col-6 offset-3 py-2 text-center">
      <input type="email" value="Adresse mail" class="form-control">
    </div>
  </div>
  <div class="row">
    <div class="col py-2 text-center">
      <input type="submit" name="" value="S'inscrire" class="btn btn-danger">
    </div>
  </div>
</div>



{% endblock %}
